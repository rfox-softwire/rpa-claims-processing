{
  "name": "rpa-claims-processing",
  "version": "1.0.0",
  "description": "RPA Claims Processing System",
  "private": true,
  "workspaces": [
    "src/claim-submission-system",
    "src/email-system",
    "src/claim-management-system"
  ],
  "scripts": {
    "build:email-css": "npx tailwindcss -i ./src/email-system/src/input.css -o ./src/email-system/public/css/styles.css --minify",
    "build:management-css": "npx tailwindcss -i ./src/claim-management-system/src/input.css -o ./src/claim-management-system/public/css/styles.css --minify",
    "build:submission-css": "npx tailwindcss -i ./src/claim-submission-system/src/input.css -o ./src/claim-submission-system/public/css/styles.css --minify",
    "build:policy-css": "npx tailwindcss -i ./src/policy-administration-system/src/input.css -o ./src/policy-administration-system/public/css/styles.css --minify",
    "start:claim": "node src/claim-submission-system/server.js",
    "start:email": "node src/email-system/server.js",
    "start:policy": "node src/policy-administration-system/server.js",
    "start:management": "node src/claim-management-system/server.js",
    "dev:claim": "nodemon src/claim-submission-system/server.js",
    "dev:email": "nodemon src/email-system/server.js",
    "dev:policy": "nodemon src/policy-administration-system/server.js",
    "dev:management": "nodemon src/claim-management-system/server.js",
    "install:all": "npm install",
    "start": "npm-run-all --parallel start:claim start:email start:policy start:management",
    "dev": "npm-run-all --parallel dev:claim dev:email dev:policy dev:management"
  },
  "keywords": [
    "rpa",
    "claims",
    "processing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.0",
    "csv-stringify": "^6.2.4",
    "express": "^4.18.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5"
  }
}
