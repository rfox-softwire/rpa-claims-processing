{
  "name": "rpa-claims-processing",
  "version": "1.0.0",
  "description": "RPA Claims Processing System",
  "private": true,
  "workspaces": [
    "src/claim-submission-system",
    "src/email-system"
  ],
  "scripts": {
    "start:claim": "node src/claim-submission-system/server.js",
    "start:email": "node src/email-system/server.js",
    "dev:claim": "nodemon src/claim-submission-system/server.js",
    "dev:email": "nodemon src/email-system/server.js",
    "install:all": "npm install",
    "start": "npm-run-all --parallel start:claim start:email",
    "dev": "npm-run-all --parallel dev:claim dev:email"
  },
  "keywords": ["rpa", "claims", "processing", "automation"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.1"
  }
}
